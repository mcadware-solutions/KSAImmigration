@{
    ViewData["Title"] = "Caregiver";
     ViewData["whatwedo"] = "yes";
     Layout = "~/Views/Shared/_Layout2.cshtml";

}
<!--body content start-->

<div class="page-content">

    <!--section start-->

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <h2 class="title mb-3">
                        Caregiver
                    </h2>
                    <p class="mb-0 text-justify">
                        This group is for people to provide care for children, elderly or those with medical needs on a temporary basis with a chance of becoming permanent resident.
                    </p>
                    <img class="img-fluid w-100 rounded box-shadow my-4" src="/images/services/large/01.jpg" alt="">

                    <p class="mb-0 text-justify">
                        <strong>
                            This caregiver is being run as a 5-year pilot program under:
                        </strong>
                    </p>
                    <p class="text-justify">
                        <ul class="list-unstyled list-icon">
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>
                                Home Child Care Provider Pilot-NOC 4411

                            </li>
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>Home Support Worker Pilot-NOC 4412
                            </li>
                        </ul>
                    </p>
                    <p class="mb-0 text-justify">
                        <strong>
                            Eligibility
                        </strong>
                    </p>
                    <p class="mb-0 text-justify">
                        You may be eligible to apply for the Home Child Care Provider Pilot or Home Support Worker Pilot, if you:
                    </p>
                    <p class="text-justify">
                        <ul class="list-unstyled list-icon">
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>
                                Have a genuine and valid job offer
                            </li>
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>
                                Ability to do the job
                            </li>
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>
                                CLB 5 in either English or French
                            </li>
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>
                                Post secondary of at level 1 year either in Canada or Foreign with evidence of ECA report
                            </li>
                            <li class="mb-3">
                                <i class="flaticon-tick"></i>
                                Plan to live outside the province of Quebec as a permanent resident
                            </li>
                        </ul>
                    </p>

                </div>

                <div class="col-lg-4 col-md-12 sidebar md-mt-5">
                    <div class="widget mb-5">
                        <div class="sidebar-links">
                            <ul class="list-unstyled">
                                <li class="active">
                                    <a href="/Home/TemporaryResident">
                                        <span class="link-icon link-arrow"></span>
